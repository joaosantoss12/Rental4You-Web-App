@model List<TrabalhoPWEB1.Models.ViewModels.ManageUserRolesViewModel>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Manage User Roles";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Editar cargos</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1" style="font-weight:bold">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">@Model[i].RoleName</label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input class="btn btn-primary" type="submit" style="width:auto" value="Guardar" />
            <div style="margin-top:1%;">
                <a class="btn btn-secondary" asp-action="Index"><svg bootstrap-icon="ArrowLeft" width="24" height="24"></svg> Voltar atrás</a>
            </div>
        </div>
    </div>
</form>