@model TrabalhoPWEB1.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
    Layout = "/Views/Shared/_Layout2.cshtml";
}

<h1>Delete</h1>

<h3>Tem a certeza que quer apagar esta conta?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrimeiroNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimeiroNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UltimoNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UltimoNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoConta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoConta)
        </dd>

    </dl>

    <div style="margin-top:1%;">
        <form asp-action="Delete" asp-route-userId="@Model.Id">
            <input type="submit" value="Apagar" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index"><svg bootstrap-icon="ArrowLeft" width="24" height="24"></svg> Voltar atrás</a>
        </form>
    </div>
</div>
