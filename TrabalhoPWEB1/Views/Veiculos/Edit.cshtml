@model TrabalhoPWEB1.Models.Veiculos

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Editar</h1>

<h4>@Html.DisplayFor(model => model.Nome)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label form-label">Url da imagem</label>
                <input asp-for="url" class="form-control" />
                <span asp-validation-for="url" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Marca" class="control-label form-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label form-label">Empresa</label>
                <select asp-for="EmpresaId"
                        class="form-control form-select"
                        asp-items="ViewBag.EmpresaId">
                </select>
                <span asp-validation-for="EmpresaId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label form-label">Número Km</label>
                <input asp-for="nKm" class="form-control" />
                <span asp-validation-for="nKm" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label form-label">Preço</label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label form-label">Localização</label>
                <select asp-for="LocalizacaoId"
                        class="form-control form-select"
                        asp-items="ViewBag.LocalizacaoId">
                </select>
                <span asp-validation-for="LocalizacaoId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label form-label">Categoria</label>
                <select asp-for="CategoriaId"
                        class="form-control form-select"
                        asp-items="ViewBag.CategoriaId">
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Estado" class="control-label form-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label form-label">Ano Produção</label>
                <input asp-for="anoProducao" class="form-control" />
                <span asp-validation-for="anoProducao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label form-label">Data Levantamento</label>
                <input asp-for="dataLevantamento" class="form-control" />
                <span asp-validation-for="dataLevantamento" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label form-label">Data Entrega</label>
                <input asp-for="dataEntrega" class="form-control" />
                <span asp-validation-for="dataEntrega" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                </label>
            </div>
            <div class="form-group" style="margin-top:1%;">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:1%;">
    <a class="btn btn-secondary" asp-action="Index"><svg bootstrap-icon="ArrowLeft" width="24" height="24"></svg> Voltar atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
