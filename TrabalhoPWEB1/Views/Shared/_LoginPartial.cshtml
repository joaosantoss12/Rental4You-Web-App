@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button style="font-weight:bold" class="btn btn-warning" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item" style="margin-right:3%;">
        <a style="font-weight:bold;" class="btn btn-warning" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item" style="margin-right:3%;">
        <a style="font-weight:bold;" class="btn btn-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
