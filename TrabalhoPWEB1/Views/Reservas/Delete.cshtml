@model TrabalhoPWEB1.Models.Reservas

@{
    ViewData["Title"] = "Delete";
    Layout = "/Views/Shared/_Layout2.cshtml";
}

<h1>Delete</h1>

<h3>Tem a certeza que quer apagar a reserva?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataHoraDoPedido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataHoraDoPedido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicioReserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicioReserva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataFimReserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFimReserva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoReserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoReserva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Id)
        </dd>
    </dl>

    <div style="margin-top:1%;">
        <form asp-action="Delete">
            <input type="submit" value="Apagar" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="MinhasReservas"><svg bootstrap-icon="ArrowLeft" width="24" height="24"></svg> Voltar atrás</a>
        </form>
    </div>
</div>
